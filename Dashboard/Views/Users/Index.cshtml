@model Dashboard.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/login.css" />
    <script src="~/js/login.js"></script>
    <title>Login</title>
</head>
<body>
    <div class="center container">
        <button class="button" onclick="showCreate()" id="createbtn">Register</button>
        <button class="button active" onclick="showLogin()" id="loginbtn">Log In</button>
        <div class="inpt">
            <p style="color:#f00">@ViewData["message"]</p>
            <div class="row" id="login">
                <div class="col-md-4">
                    <form asp-action="Authorize">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group item">
                            <div>
                                <label asp-for="Username" class="control-label lbl"></label><br />
                                <input asp-for="Username" class="form-control txtbox" />
                                <span asp-validation-for="Username" class="validate" style="color:#f00"></span>
                            </div>
                        </div>
                        <div class="form-group item">
                            <label asp-for="Password" class="control-label lbl"></label><br />
                            <input asp-for="Password" class="form-control txtbox" />
                            <span asp-validation-for="Password" class="validate" style="color:#f00"></span>
                        </div>
                        <div class="form-group submitcontainer">
                            <input type="submit" value="Login" class="button blue submit" />
                        </div>
                    </form>
                </div>
            </div>
            <div class="row" id="create" style="display:none">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group item">
                            <div>
                                <label asp-for="Username" class="control-label lbl"></label><br />
                                <input asp-for="Username" class="form-control txtbox" />
                                <span asp-validation-for="Username" class="validate" style="color:#f00"></span>
                            </div>
                        </div>
                        <div class="form-group item">
                            <label asp-for="Password" class="control-label lbl"></label><br />
                            <input asp-for="Password" class="form-control txtbox" />
                            <span asp-validation-for="Password" class="validate" style="color:#f00"></span>
                        </div>
                        <div class="form-group submitcontainer">
                            <input type="submit" value="Register" class="button green submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
